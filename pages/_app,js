// pages/_app.js
import 'bootstrap/dist/css/bootstrap.min.css'; // Importa Bootstrap directamente
import 'bootswatch/dist/Lux/bootstrap.min.css'; // Importa el tema Minty de Bootswatch
import '../styles/global.css'; // Si tienes estilos personalizados
import { useEffect } from 'react';

function MyApp({ Component, pageProps }) {
  useEffect(() => {
    // Evitar que se cargue el tema de Bootswatch en el cliente si ya se carg√≥
    const bootstrapCSS = document.querySelector('link[href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"]');
    if (bootstrapCSS) {
      bootstrapCSS.remove();
    }
  }, []);

  return <Component {...pageProps} />;
}

export default MyApp;
